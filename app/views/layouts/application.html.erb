<!DOCTYPE html>
<html ng-app="PackingList">
<head>
  <title>PlayaPlanner</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
  	<a class="navbar-brand" href="#">)'( Playa Planner</a>
    <p class="navbar-text">Welcome, 
    	<% if current_user %> 
    		<%= current_user.username %>  
    	<% else %>	
    		Guest
  		<% end %>
    </p>
 		<ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Options <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
        	<% unless current_user %>
	          <li>
	          	<a href="javascript:void(0)" data-toggle="modal" data-target="#sign-up-modal">Save</a>
	          </li>
	          <li class="divider"></li>
          <% end %>
          <li><a href="#">Print</a></li>
          <li><a href="#">Email</a></li>
        </ul>
      </li>
      <li>
      	<% if current_user %>
      		<%= link_to "Sign Out", session_url, :method => :delete %>
      	<% else %>
      		<a href="javascript:void(0)" data-toggle="modal" data-target="#sign-in-modal">Sign In</a>
    		<% end %>
      </li>
    </ul>
  </div>
</nav>
<div class="container">
	<%= render partial: "layouts/errors" %>
	<%= yield %>
</div>

<div class="modal fade" id="sign-up-modal" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
    	<%= render partial: "users/form", locals: { message: "Sign Up", path: "/users" } %>
    </div>
  </div>
</div>

<div class="modal fade" id="sign-in-modal" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render partial: "users/form", locals: { message: "Sign In", path: "/session" } %>
    </div>
  </div>
</div>
</body>
</html>
