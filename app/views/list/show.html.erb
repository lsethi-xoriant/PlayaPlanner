<h1>Playa Packing List</h1>

<div ng-controller="ListCtrl">
	<div class="row">
		<div class="col-sm-12"
			<ul>
				<li ng-repeat="item in items" class="list-item">
					<input type="checkbox" ng-model="item.checked" class="large" ng-click="checkItem(item)">
					<span class="done-{{item.checked}}">{{item.name}}</span>
				</li>
			</ul>
		</div>
	</div>

	<div class="row">
		<form ng-submit="addItem()">
			<div class="col-sm-4">
				<input type="text" class="form-control" ng-model="newItem.name">
			</div>
			<div class="col-sm-1">
				<input type="submit" class="btn btn-info" value="Add">
			</div>
		</form>
	</div>
</div>